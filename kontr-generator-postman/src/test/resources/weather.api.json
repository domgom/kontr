{
	"info": {
		"_postman_id": "cda13963-10c1-4320-af83-3386f83a9473",
		"name": "Weather API",
		"description": "Collection of requests for a Weather API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "26866896"
	},
	"item": [
		{
			"name": "Get Current Weather",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/current?city=San Francisco",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"current"
					],
					"query": [
						{
							"key": "city",
							"value": "San Francisco",
							"description": "Name of the city for which weather needs to be retrieved"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Forecast",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/forecast?daysAhead=5",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"forecast"
					],
					"query": [
						{
							"key": "daysAhead",
							"value": "5",
							"description": "Number of days ahead for weather forecast"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Historical Weather Data",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/history",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"history"
					]
				}
			},
			"response": []
		},
		{
			"name": "Update Weather Information",
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{'temperature': 25, 'conditions': 'Partly Cloudy'}"
				},
				"url": {
					"raw": "{{baseUrl}}/weather/:city/:date",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"weather",
						":city",
						":date"
					],
					"variable": [
						{
							"key": "city",
							"value": "San Francisco"
						},
						{
							"key": "date",
							"value": "2024-07-01T00:00:00Z"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete Weather Data",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/weather",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"weather"
					]
				}
			},
			"response": []
		}
	],
